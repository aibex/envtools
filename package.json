{
  "name": "@aibex/envtools",
  "version": "0.0.6",
  "description": "Simple Functions for a Sane Environment",
  "homepage": "https://github.com/aibexhq/envtools",
  "author": "Aibex <oss@aibex0corp.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.18.0 <11 || >=12.14.0 <13 || >=13.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "env",
    "environment",
    "envtools",
    "process"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "files": [
    "cjs/",
    "esm/"
  ],
  "scripts": {
    "build": "rm -rf cjs/* && babel esm --out-dir cjs",
    "bt": "yarn build && yarn test",
    "watch": "nodemon -L --ignore cjs/ --exec yarn bt",
    "test": "yarn build && ava",
    "ci": "pretty-quick --check && yarn build && ava",
    "release": "semantic-release",
    "____________________": "echo \"The following sub-commands are used to serve the main commands above\"",
    "format:prettier": "pretty-quick --staged",
    "husky:precommit": "concurrently \"npm:format:*\" && yarn build && git add -A && CI=1 ava",
    "commit:cz": "exec < /dev/tty && git-cz --hook || true"
  },
  "release": {
    "ci": false,
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "feature",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator"
    ]
  },
  "standard-version": {
    "releaseCommitMessageFormat": "â“ Chore: Release {{currentTag}}",
    "types": [
      {
        "type": "âœ¨ Feat",
        "section": "Features"
      },
      {
        "type": ":sparkles: Feat",
        "section": "Features"
      },
      {
        "type": "ðŸ› Fix",
        "section": "Bug Fixes"
      },
      {
        "type": ":bug: Fix",
        "section": "Bug Fixes"
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run husky:precommit",
      "prepare-commit-msg": "if [ -t 1 ] ; then yarn run commit:cz; fi"
    }
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/aibexhq/envtools/issues"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "dependencies": {
    "semantic-release": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "7.8.4",
    "ava": "^3.3.0",
    "commitizen": "^4.0.3",
    "concurrently": "^5.0.0",
    "emoji-cz": "^0.3.0",
    "esm": "^3.2.25",
    "husky": "^4.2.1",
    "nodemon": "^2.0.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "standard-version": "^7.1.0"
  }
}
